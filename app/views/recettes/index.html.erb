    var s = d.style;
    if(!(('flexWrap' in s) || ('WebkitFlexWrap' in s) || ('MozFlexWrap' in s) || ('msFlexWrap' in s))) {
      d.className = 'no-flexwrap';
    }
  })(document.documentElement);
  </script>
